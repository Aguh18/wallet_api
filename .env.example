# App
APP_NAME=wallet_api
APP_VERSION=1.0.0

# HTTP settings
HTTP_PORT=8080
HTTP_USE_PREFORK_MODE=false

# Logger
LOG_LEVEL=debug

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wallet_db
DB_USER=wallet_user
DB_PASS=wallet_password

# PostgreSQL Connection
PG_URL=postgres://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}
PG_POOL_MAX=2

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-this-in-production

# Token Expiry
ACCESS_TOKEN_EXPIRY=15 # minutes
REFRESH_TOKEN_EXPIRY=7 # days
